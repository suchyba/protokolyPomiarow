<Window x:Class="ProtokolyPomiarow.Windows.AddLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtokolyPomiarow.Windows"
        mc:Ignorable="d"
        Title="Dodaj rodział" Height="131" Width="500"
        ResizeMode="NoResize"
        Icon="logo.png">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Grid.Column="0" Name="LabelTextBox" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="5" Margin="20, 5"/>
        <Button Grid.Row="1" Grid.Column="1" Name="AddLabelButton" Content="Dodaj" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="AddLabelButton_Click" Padding="20, 5" Margin="20, 5" IsDefault="True"/>
        <Label Grid.Row="0" Grid.Column="0" Content="Tytuł" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20, 5"/>
    </Grid>
</Window>
