<Window x:Class="ProtokolyPomiarow.Windows.ModifyObjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtokolyPomiarow.Windows"
        mc:Ignorable="d"
        Title="" Height="171.2" Width="365" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Icon="logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.ColumnSpan="2" Name="InfoTextBox" TextWrapping="NoWrap" Text="" Margin="5"
                 MaxLines="4" FontFamily="Arial" AcceptsReturn="True" AcceptsTab="True" FontSize="18" VerticalContentAlignment="Center"/>
        <Button Grid.Row="1" Grid.Column="0" Name="LeftButton" Content="Usuń" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20, 5" Margin="20, 10" Click="LeftButton_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Name="RightButton" Content="Zatwierdź" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20, 5" Margin="20, 10" Click="RightButton_Click"/>
    </Grid>
</Window>
